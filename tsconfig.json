{
    "compilerOptions": {
        "jsx": "react",
        "outDir": "./dist/",
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "strict": true,
        "sourceMap": true,
        "isolatedModules": true,
        "removeComments": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "types": [
            "node"
        ],
        "lib": [
            "es2015",
            "es2016",
            "dom",
            "es2018.promise",
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "/node_modules/",
        "/dist"
    ]
}